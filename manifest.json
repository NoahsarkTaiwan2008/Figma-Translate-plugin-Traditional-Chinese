{
  "manifest_version": 3,
  "name": "Figma繁體中文翻譯插件",
  "short_name": "Figma TW plugin",
  "description": "將Figma介面翻譯成繁體中文",
  "version": "1.0.0",
  "homepage_url": "https://github.com/NoahsarkTaiwan2008/Figma-Translate-plugin-Traditional-Chinese",
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.figma.com/*"
      ],
      "js": [
        "js/content.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "permissions": [
    "activeTab"
  ]
}
